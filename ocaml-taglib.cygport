inherit ocaml

NAME="ocaml-taglib"
VERSION=0.2.0
RELEASE=1
CATEGORY="Libs"
SUMMARY="OCaml TagLib bindings"
DESCRIPTION="This package contains an O'Caml interface for the TagLib Audio
Meta-Data Library."
HOMEPAGE="http://savonet.sourceforge.net/"
SRC_URI="mirror://sourceforge/savonet/${NAME}-${VERSION}.tar.gz"

src_compile() {
	lndirs
	cd ${B}
	cygconf
	cygmake -j1
}
